@model ForgetPasswordDTO


@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/__Account_Layout.cshtml";
}


<div class="login-box">
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>

            <form asp-controller="Account" asp-action="ForgetPassword" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="input-group mb-3">
                    <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <input type="submit" value="Request new password" class="btn btn-primary btn-block" />
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <p class="mt-3 mb-1">
                <a asp-controller="Account" asp-action="Login">Login</a>
            </p>
            <p class="mb-0">
                <a asp-controller="Account" asp-action="Register" class="text-center">Register a new membership</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>


