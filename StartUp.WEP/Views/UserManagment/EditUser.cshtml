@model EditUserDTO


@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Edit User </h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Edit User</li>
                    <li class="breadcrumb-item"><a asp-controller="UserManagment" asp-action="index">User Managment</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="index"><i class="fas fa-home col-sm-2"></i></a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
</div>

<!-- Horizontal Form -->
<div>

    <div class="card card-secondary w-50 m-auto">
        <div class="card-header">
            <h3 class="card-title">Edit User</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card-body">
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label">User Id </label>
                    <input class="form-control col-sm-10" asp-for="Id" disabled>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label">User Email</label>
                    <input class="form-control col-sm-10" asp-for="Email">
                </div>
                <div class="form-group row">
                    <label asp-for="UserName" class="col-sm-2 col-form-label">User Name</label>
                    <input class="form-control col-sm-10" asp-for="UserName">
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary"> Edit User </button>
                <a class="btn btn-danger" asp-action="DeleteUser" asp-route-id="@Model.Id"> Delete User </a>
                <a class="btn btn-secondary float-right" asp-action="Index"> Back </a>
            </div>
            <!-- /.card-footer -->


            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Edit Roles</h3>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                                    <h5 class="card-title">@role</h5>
                                    <br />
                        }
                    }
                    else
                    {
                            <h5 class="card-title">No Roles Added Yet</h5>
                    }

                </div>
                <div class="card-footer">
                    <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" class="btn btn-primary"> Manage Roles </a>
                </div>
            </div>



            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">User Claims</h3>
                </div>
                <div class="card-body">
                    @if (Model.Claims.Any())
                    {
                        foreach (var claim in Model.Claims)
                        {
                            @*                         <h5 class="card-title w-25">@claim</h5>
                    <br /> *@
                            if (claim.Contains("true"))
                            {
                                            <h5 class="card-title text-success w-25">@claim</h5>
                                            <br />
                            }
                            else
                            {
                                            <h5 class="card-title text-danger w-25">@claim</h5>
                                            <br />
                            }

                        }
                    }
                    else
                    {
                            <h5 class="card-title">No Claim Added Yet</h5>
                    }

                </div>
                <div class="card-footer">
                    <a asp-action="ManageUserClaims" asp-route-userId="@Model.Id" class="btn btn-primary"> Manage Claims </a>
                </div>
            </div>
        </form>
    </div>
    <!-- /.card -->

</div>


