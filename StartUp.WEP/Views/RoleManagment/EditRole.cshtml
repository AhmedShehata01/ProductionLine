@model EditRoleDTO

@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0"> Edit Role </h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Edit Role</li>
                    <li class="breadcrumb-item"><a asp-controller="RoleManagment" asp-action="index">Role Managment</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="index"><i class="fas fa-home col-sm-2"></i></a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Horizontal Form -->
<section class="content">
    <div class="card card-secondary w-50 m-auto">
        <div class="card-header">
            <h3 class="card-title">Edit Role</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card-body">
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label">Role Id </label>
                    <input class="form-control col-sm-10" asp-for="Id" disabled>
                </div>
                <div class="form-group row">
                    <label asp-for="RoleName" class="col-sm-2 col-form-label">Role Name</label>
                    <input class="form-control col-sm-10" asp-for="RoleName">
                </div>

                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" asp-for="IsExternal">
                            <label class="form-check-label" asp-for="IsExternal">Is External role</label>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.card-body -->



            <div class="card-footer">
                <button type="submit" class="btn btn-primary"> Edit Role </button>
                <a class="btn btn-danger" asp-action="DeleteRole" asp-route-id="@Model.Id"> Delete Role </a>
                <a class="btn btn-secondary float-right" asp-action="Index"> Back </a>
            </div>
            <!-- /.card-footer -->



            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Users In Role</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                            <br />
                        }
                    }
                    else
                    {
                        <h5 class="card-title">No Users Added Yet</h5>
                    }

                </div>
                <div class="card-footer">
                    <a asp-action="EditUserInRole" asp-controller="RoleManagment"
                       asp-route-roleId="@Model.Id" class="btn btn-primary"> Add Or Remove Users </a>
                </div>
            </div>
        </form>
    </div>
    <!-- /.card -->

</section>





