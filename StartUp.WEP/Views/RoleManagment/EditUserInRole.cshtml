@model List<UserRoleDTO>


@{
    ViewData["Title"] = "EditUserInRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleId = ViewBag.roleId;
}

<div class="content-header">

    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Users In Role </h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Users In Role</li>
                    <li class="breadcrumb-item"><a asp-controller="RoleManagment" asp-action="EditRole" asp-route-Id="@roleId">Edit Role</a></li>
                    <li class="breadcrumb-item"><a asp-controller="RoleManagment" asp-action="index">Role Managment</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="index"><i class="fas fa-home col-sm-2"></i></a></li>

                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>

</div>


<!-- Horizontal Form -->
<section class="content">

    <div class="card card-secondary w-50 m-auto">
        <div class="card-header">
            <h3 class="card-title">Add Or Remove Users From This Role</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card-body">

                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-group row">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <div class="offset-sm-2 col-sm-10">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" asp-for="@Model[i].IsSelected">
                                <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-secondary float-right"> Back </a>
            </div>
            <!-- /.card-footer -->
        </form>
    </div>
    <!-- /.card -->

</section>

